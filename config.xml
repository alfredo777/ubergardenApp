<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="true" />
    <name>Ur Garden</name>
    <description>
        Aplicación de la tienda en linea www.urgarden.com.mx la primer tienda de Jardinería en linea México.
    </description>
    <author email="jardarubydv@gmail.com" href="http://cordova.io">
        JARDA
    </author>
    <icon src="res/icon/ios/icon.png" />
    <content src="index.html" />
    <access origin="*" />
    <access origin="http://google.com" />
    <access origin="http://www.urgarden.com.mx" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="www/res/icon/android/icon-36-ldpi.png" />
        <icon density="mdpi" src="www/res/icon/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="www/res/icon/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="www/res/icon/android/icon-96-xhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />


        <!-- iPhone 6 / 6+ -->
        <icon src="www/res/icon/ios/icon-72@2x.png" platform="ios" width="180" height="180" />

        <!-- iPhone / iPod Touch  -->
        <icon src="www/res/icon/ios/icon-72.png" platform="ios" width="60" height="60" />
        <icon src="www/res/icon/ios/icon-72@2x.png" platform="ios" width="120" height="120" />

        <!-- iPad -->
        <icon src="www/res/icon/ios/icon-72.png" platform="ios" width="76" height="76" />
        <icon src="www/res/icon/ios/icon-72@2x.png" platform="ios" width="152" height="152" />
        <icon src="www/res/icon/ios/icon-72@2x.png" platform="ios" width="167" height="167" />

        <!-- Settings Icon -->
        <icon src="www/res/icon/ios/icon-57.png" platform="ios" width="29" height="29" />
        <icon src="www/res/icon/ios/icon-57@2x.png" platform="ios" width="58" height="58" />
        <icon src="www/res/icon/ios/icon-72@2x.png" platform="ios" width="87" height="87" />

        <!-- Spotlight Icon -->
        <icon src="www/res/icon/ios/icon-57.png" platform="ios" width="40" height="40" />
        <icon src="www/res/icon/ios/icon-57@2x.png" platform="ios" width="80" height="80" />
        <icon src="www/res/icon/ios/icon-57@2x.png" platform="ios" width="120" height="120" />


    </platform>

    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-device" spec="^1.1.6" />
</widget>
