<?xml version='1.0' encoding='utf-8'?>
<widget id="mx.com.urgarden" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>Ur Garden</name>
    <description>
        Aplicación tienda de jardinería Ur Garden.
    </description>
    <author email="jardarubydv@gmail.com" href="http://cordova.io">
        JARDA
    </author>
    <content src="index.html" />
    <access origin="*" />
    <access origin="http://google.com" />
    <access origin="http://www.urgarden.com.mx" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="true" />
    <preference name="phonegap-version" value="cli-7.0.1" />
</widget>
