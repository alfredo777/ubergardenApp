<div class="post">
  <div class="container">
    <br/>
    <div class="post-head">
      <ul>
        {{#if categoria}}
        <li style="width:50px; text-transform: uppercase;"><h4>{{categoria}}</h4></li>
        {{else}}
        <li style="width:50px;"><h4>PRODUCTOS</h4></li>
        {{/if}}
      </ul>
    </div>
    <br/><br/><br/>
    <div class="clear-both"></div>
    <div class="post-content">
      <div class="row" id="productos">
        {{#each productos}}
        <div class="col s6" style="margin-top:10px;">
          <div class="content">
            <div class="get-p{{Id}}">
              <img id="img{{Id}}" src="data:image/png;base64,{{img}}" alt="">
            </div>
            <h3><a href="">{{nombre}}</a></h3>
            {{#if descuento}}
            <div class="price">de <span>${{precio}}</span> a ${{precio_final}}</div>
            {{else}}
            <div class="price"> ${{precio_final}}</div>
            {{/if}}
            <div id="descripccion{{Id}}" data-v="{{descripccion}}"></div>
            <center>
            <a class="button-bordered gold-button button-90" onclick="add_product_selection_to_data_base({{Id}},'{{color1}}','{{nombre}}')"><i class="fa fa-shopping-cart"></i> Agregar</a>
            <div id="favorite-{{Id}}">
              <script type="text/javascript">
              $(document).ready(function(){
              favotied('{{Id}}');
              });
              </script>
            </div>
            </center>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="clear-both"></div>
  {{#if paginas}}
  <div class="pagination-blog" style="display:none;" id="no-products">
    <center><b>Ya no hay mas productos por cargar.</b></center>
  </div>
  {{/if}}
</div>
{{#if paginas}}
<script type="text/javascript">
$(window).scroll(function () {
if ($(window).scrollTop() >= $(document).height() - $(window).height() - 10) {
get_products(false)
}
});
</script>
{{/if}}